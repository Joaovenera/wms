# Integration Test Environment Configuration
NODE_ENV=integration
PORT=3002
LOG_LEVEL=info

# Integration Test Database
DATABASE_URL=postgresql://integration_user:integration_password@localhost:5432/wms_integration
REDIS_URL=redis://localhost:6379/2

# Integration Test Authentication
JWT_SECRET=integration-jwt-secret-key-for-testing
SESSION_SECRET=integration-session-secret-for-testing

# Integration Test File Storage
UPLOAD_PATH=./integration-uploads
MAX_FILE_SIZE=10485760

# Integration Test Settings
CACHE_TTL=300
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=500

# Enable select external services for integration tests
ENABLE_EMAIL_SERVICE=false
ENABLE_SMS_SERVICE=false
ENABLE_WEBHOOK_SERVICE=false